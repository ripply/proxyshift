
    <form id="signup-form" class="form-signup">
        <h2 class="form-signup-heading">Sign up</h2>
        <label for="username" class="sr-only">Username</label>
        <input type="username" id="signup-username-input" class="form-control" placeholder="Username" required autofocus>
        <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" id="signup-password-input" class="form-control" placeholder="Password" required>
        <label for="inputName" class="sr-only">Name</label>
        <input type="name" id="signup-name-input" class="form-control" placeholder="Name" required>
        <label for="inputEmail" class="sr-only">Email</label>
        <input type="email" id="signup-email-input" class="form-control" placeholder="Email" required>
        <label for="inputSquestion" class="sr-only">Temporary Secret Question?</label>
        <input type="squestion" id="signup-squestion-input" class="form-control" placeholder="Temporary Secret Question?" required>
        <label for="inputSanswer" class="sr-only">Secret Answer</label>
        <input type="sanswer" id="signup-sanswer-input" class="form-control" placeholder="Secret Answer" required>
        <button class="btn btn-lg btn-primary btn-block" id="signup-btn" type="submit">Sign up</button>
    </form>
