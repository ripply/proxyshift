<link rel="stylesheet" type="text/css"  href="site/css/login-form-style.css">
<div class="login-form">
    <div class="row">
        <div class="col-sm-8 col-sm-offset-2 text center">
            <div class="description">
                {{#if message}}
                    <p>{{message}}</p>
                {{/if}}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">

            <div class="form-box">
                <div class="form-top">
                    <div class="">
                        <h3>{{_ 'admin.invite.create.group' }}</h3>
                    </div>
                </div>
                <div class="form-bottom">
                    <form role="form" action="/admin/inviteuser" method="post" class="login-form">
                        <div class="form-group">
                            <label class="sr-only" for="email">{{_ 'form.email' }}</label>
                            <input type="text" name="email" placeholder="{{_ 'form.email' }}..." value="{{ email }}" class="form-email form-control" id="form-email">
                        </div>
                        <div class="form-group">
                            <label class="sr-only" for="message">{{_ 'form.message' }}</label>
                            <input type="text" name="message" placeholder="{{_ 'form.message' }}..." value="{{ message }}" class="form-message form-control" id="form-message">
                        </div>
                        <button type="submit" class="btn">{{_ 'admin.invite.create.group' }}</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
