<link rel="stylesheet" type="text/css"  href="site/css/login-form-style.css">
<div class="login-form">
    <div class="row">
        <div class="col-sm-8 col-sm-offset-2 text center">
            <h1>{{_ 'welcome.to.proxyshift'}}</h1>
            <div class="description">
                {{#if message}}
                    <p>{{_ message}}</p>
                {{/if}}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">

            <div class="form-box">
                <div class="form-top">
                    <div class="form-top-left">
                        <h3>{{_ 'welcome.resetpassword'}}</h3>
                        <p>{{_ 'password.reset.description' }}</p>
                    </div>
                    <div class="form-top-right">
                        <i class="fa fa-lock"></i>
                    </div>
                </div>
                <div class="form-bottom">
                    <form role="form" action="/passwordreset" method="post" class="login-form">
                        <input type="hidden" name="token" value="{{invitation.token}}">
                        <input type="hidden" name="action" value="signin">
                        <div class="form-group">
                            <label class="sr-only" for="password">{{_ 'form.password' }}</label>
                            <input type="text" name="password" placeholder="{{_ 'form.password' }}..." value="{{inputUsername}}" class="form-username form-control" id="form-username">
                        </div>
                        <div class="form-group">
                            <label class="sr-only" for="verifypassword">{{_ 'form.verifypassword'}}</label>
                            <input type="password" name="verifypassword" placeholder="{{_ 'form.verifypassword'}}..." class="form-password form-control" id="form-password">
                        </div>
                        <button type="submit" class="btn">{{_ 'welcome.resetpassword' }}</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<a href="/mobile" class="navbar-toggle collapsed">LOGIN</a>
